/* It's the sale season again and Chef bought items worth a total of X rupees. The sale season offer is as
   follows:
   if X≤100, no discount.
   if 100<X≤1000, discount is 25 rupees.
   if 1000<X≤5000, discount is 100 rupees.
   X>5000, discount is 500 rupees. */
 
import java.util.Scanner;

class Sale {
    public int calculateDiscount(int x) {
        if (x <= 100) {
            return x;
        } else if (x > 100 && x <= 1000) {
            return x-25;
        } else if (x > 1000 && x <= 5000) {
            return x-100;
        } else {
            return x-500;
        }
    }
}

class Season extends Sale {
    @Override
    public int calculateDiscount(int x) {
        return super.calculateDiscount(x);
    }
}

public class Sale_Season {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        System.out.println("Enter the number:");
        int x = in.nextInt();
        Season s = new Season();
        int discount = s.calculateDiscount(x);
        System.out.println("Discount: " + discount);
    }
}
