/* Write a program that the user to enter a distance in kilometer and then prints out how far 
   that distance is in miles.There are 0.621371 miles in one kilometer.*/
   
  import java.util.Scanner;
    public class Kilometer
	{
	  public static void main(String[]args)
	  {
	     Scanner in=new Scanner(System.in);
		 System.out.println("Enter the kilometer:");
		 double k=in.nextDouble();
		 System.out.println("kilometer is equal to"+Distance(k));
	  }
	  protected static double Distance(float k)
	  {
	       return (k*0.621371);
	  }
	  
	}
	